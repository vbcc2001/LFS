<ui:UiBinder
  xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g='urn:import:com.google.gwt.user.client.ui'
  xmlns:header='urn:import:com.lfs.ss.gae.client.header'
  xmlns:main='urn:import:com.lfs.ss.gae.client.main'  
  >

  <g:DockLayoutPanel unit='EM'>
    <g:north size='4'>
      <header:Header ui:field='header' />
    </g:north>

    <g:center>
      <g:SplitLayoutPanel>
        <g:west size='192'>
          <main:Sidebar ui:field='list' />
        </g:west>
        <g:center>
          <main:Detail ui:field='detail' />
        </g:center>
      </g:SplitLayoutPanel>
    </g:center>
  </g:DockLayoutPanel>

</ui:UiBinder>

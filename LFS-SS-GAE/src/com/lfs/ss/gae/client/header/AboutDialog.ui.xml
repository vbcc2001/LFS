<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g='urn:import:com.google.gwt.user.client.ui'
  xmlns:mail='urn:import:com.lfs.ss.gae.client'>

  <ui:image field='logo' src='lfs-logo.png'/>

  <ui:style>
  .panel {
    padding: 10px;
 	}

  .aboutText {
    text-align: left;
  }

  .logo {
    gwt-image: 'logo';
    float: left;
    padding-right: 1em;
  }

  .buttons {
    text-align: right;
  }
  </ui:style>
  <g:HTMLPanel width='24em' styleName='{style.panel}'>
    <div class='{style.logo}'/>
    <div class='{style.aboutText}'>关于我们的介绍！</div>
    <div class='{style.buttons}'><g:Button text='Close' ui:field='closeButton' /></div>
  </g:HTMLPanel>
</ui:UiBinder>

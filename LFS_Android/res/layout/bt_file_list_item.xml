<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#555555"
    android:paddingTop="4dp" 
    android:paddingBottom="4dp" >
    <Button
        android:id="@+id/file_delete1"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:drawableBottom="@android:drawable/ic_menu_delete"
        android:gravity="bottom" />
    <TextView
        android:id="@+id/file_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"  
        android:layout_marginRight="50dp"  
        android:ellipsize="end"
        android:singleLine="true"
        android:text="@string/app_name" />
    <TextView
        android:id="@+id/download_precent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
    		android:layout_marginRight="50dp"    
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/download_size"
        android:ellipsize="end"
        android:text="@string/app_name"
        android:singleLine="true"/>

    <ProgressBar
        android:id="@+id/download_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    		android:layout_marginLeft="20dp"         
        android:layout_below="@+id/download_size"
        android:layout_marginRight="50dp" />

    <TextView
        android:id="@+id/save_path"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
     		android:layout_marginLeft="20dp"    
     		android:layout_marginRight="50dp"    
        android:layout_alignParentRight="true"
        android:layout_below="@+id/download_progress"
        android:gravity="left"
        android:text="@string/app_name" />



    <TextView
        android:id="@+id/download_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/file_title"
        android:layout_below="@+id/file_title"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="@string/app_name" />



</RelativeLayout>